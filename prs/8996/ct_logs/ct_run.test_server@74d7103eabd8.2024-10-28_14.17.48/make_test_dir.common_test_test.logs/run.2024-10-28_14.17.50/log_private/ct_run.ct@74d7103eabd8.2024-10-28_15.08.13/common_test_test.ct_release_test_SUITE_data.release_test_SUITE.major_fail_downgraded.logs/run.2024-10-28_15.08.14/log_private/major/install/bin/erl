prog="$0"
progdir=`dirname "${prog}"`
dyn_erl_path="${progdir}/../erts-15.1.2/bin/dyn_erl"
if [ ! -f "$dyn_erl_path" ]
then
    dyn_erl_path="${progdir}/dyn_erl"
fi

if [ -f "$dyn_erl_path" ]
then
    dyn_rootdir=`"${dyn_erl_path}" --realpath`
    dyn_rootdir=`dirname "${dyn_rootdir}"`
    dyn_rootdir=`dirname "${dyn_rootdir}"`
    dyn_rootdir="${dyn_rootdir}"
else
    dyn_rootdir=""
fi

if [ -z "$ERL_ROOTDIR" ]
then
    ROOTDIR="/buildroot/otp/lib/common_test/make_test_dir/ct_logs/ct_run.test_server@74d7103eabd8.2024-10-28_14.17.48/make_test_dir.common_test_test.logs/run.2024-10-28_14.17.50/log_private/ct_run.ct@74d7103eabd8.2024-10-28_15.08.13/common_test_test.ct_release_test_SUITE_data.release_test_SUITE.major_fail_downgraded.logs/run.2024-10-28_15.08.14/log_private/major/install"
    if [ "$dyn_rootdir" != "$ROOTDIR" ] && [ "$dyn_rootdir" != "" ]
    then
        # It is likely that the files have been copied or moved
        ROOTDIR="$dyn_rootdir"
    fi
else
    ROOTDIR="$ERL_ROOTDIR"
fi
BINDIR="$ROOTDIR/erts-15.1.2/bin"
EMU=beam
PROGNAME=`basename "$0"`
export EMU
export ROOTDIR
export BINDIR
export PROGNAME
exec "$BINDIR/erlexec" ${1+"$@"}
