#!/bin/sh
ROOTDIR=/buildroot/otp/lib/common_test/make_test_dir/ct_logs/ct_run.test_server@74d7103eabd8.2024-10-28_14.17.48/make_test_dir.common_test_test.logs/run.2024-10-28_14.17.50/log_private/ct_run.ct@74d7103eabd8.2024-10-28_14.49.07/common_test_test.ct_release_test_SUITE_data.release_test_SUITE.major.logs/run.2024-10-28_14.49.07/log_private/major/install

if [ -z "$RELDIR" ]
then
   RELDIR=$ROOTDIR/releases
fi

START_ERL_DATA=${1:-$RELDIR/start_erl.data}

$ROOTDIR/bin/run_erl -daemon /tmp/ $ROOTDIR/log "exec $ROOTDIR/bin/start_erl $ROOTDIR $RELDIR $START_ERL_DATA -sname ct_release_test-upgrade -heart"
