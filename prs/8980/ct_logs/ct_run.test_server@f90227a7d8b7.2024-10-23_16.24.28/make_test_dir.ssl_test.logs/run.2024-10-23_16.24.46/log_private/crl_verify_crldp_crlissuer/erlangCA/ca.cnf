# Purpose: Configuration for CAs.

ROOTDIR	          = /buildroot/otp/lib/ssl/make_test_dir/ct_logs/ct_run.test_server@f90227a7d8b7.2024-10-23_16.24.28/make_test_dir.ssl_test.logs/run.2024-10-23_16.24.46/log_private/crl_verify_crldp_crlissuer
default_ca	= ca

[ca]
dir		= $ROOTDIR/erlangCA
certs		= $dir/certs
crl_dir	        = $dir/crl
database	        = $dir/index.txt
new_certs_dir	= $dir/newcerts
certificate	= $dir/cert.pem
serial		= $dir/serial
crl		= $dir/crl.pem
crlnumber		= $dir/crlnumber
private_key	= $dir/private/key.pem
RANDFILE	        = $dir/private/RAND

x509_extensions   = user_cert
crl_extensions = crl_ext
unique_subject  = no
default_days	= 3600
default_md	= sha256
preserve	        = no
policy		= policy_match

[policy_match]
commonName		= supplied
organizationalUnitName	= optional
organizationName	        = match
countryName		= match
localityName		= match
emailAddress		= supplied

[crl_ext]
authorityKeyIdentifier=keyid:always,issuer:always
[user_cert]
basicConstraints	= CA:false
keyUsage 		= nonRepudiation, digitalSignature, keyEncipherment
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid,issuer:always
subjectAltName	= DNS.1:f90227a7d8b7
issuerAltName	= issuer:copy
crlDistributionPoints=crl_section
[crl_section]
fullname=URI:http://localhost/erlangCA/crl.pem
CRLissuer=dirName:issuer_sect
[issuer_sect]
C=UK
O=Organisation
CN=Some Name
[user_cert_digital_signature_only]
basicConstraints	= CA:false
keyUsage 		= digitalSignature
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid,issuer:always
subjectAltName	= DNS.1:f90227a7d8b7
issuerAltName	= issuer:copy

[ca_cert]
basicConstraints 	= critical,CA:true
keyUsage 		= cRLSign, keyCertSign
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always,issuer:always
subjectAltName	= email:copy
issuerAltName	= issuer:copy
